@model IEnumerable<VeterinaryClinic.UI.Models.Appointments.AppointmentListItemViewModel>

@{
    ViewData["Title"] = "Randevular";
}

<!-- Üst Başlık ve Yeni Ekle Butonu -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark mb-0">Randevular</h2>
        <p class="text-muted">Yaklaşan ve geçmiş tüm randevuları buradan yönetebilirsiniz.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-lg me-1"></i> Yeni Randevu
    </a>
</div>

<!-- Başarı Mesajı -->
@if (TempData["Success"] is string success)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @success
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- TABLO ALANI -->
<div class="card-box p-4">
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col">Hasta (Hayvan)</th>
                    <th scope="col">Tür</th>
                    <th scope="col">Tarih</th>
                    <th scope="col">Saat</th>
                    <th scope="col">Durum</th>
                    <th scope="col" class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center py-5">
                            <div class="d-flex flex-column align-items-center justify-content-center text-muted">
                                <i class="bi bi-calendar-x display-4 mb-3 opacity-50"></i>
                                <h5 class="fw-normal">Henüz randevu bulunamadı.</h5>
                                <p class="small mb-0">"Yeni Randevu" butonunu kullanarak kayıt oluşturabilirsiniz.</p>
                            </div>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        var badgeClass = item.StatusText switch
                        {
                            "Scheduled" => "bg-info text-dark",
                            "Completed" => "bg-success",
                            "Cancelled" => "bg-danger",
                            _ => "bg-secondary"
                        };

                        <tr>
                            <td>
                                <span class="fw-bold text-primary">@item.AnimalName</span>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark border">@item.Species</span>
                            </td>
                            <td>
                                <i class="bi bi-calendar4-week me-1 text-muted"></i> @item.Date
                            </td>
                            <td>
                                <i class="bi bi-clock me-1 text-muted"></i> @item.Time
                            </td>
                            <td>
                                <span class="badge @badgeClass bg-opacity-75">
                                    @item.StatusText
                                </span>
                            </td>
                            <td class="text-end">
                                <a asp-controller="Payments"
                                   asp-action="Index"
                                   asp-route-appointmentId="@item.Id"
                                   class="btn btn-sm btn-outline-success me-1"
                                   title="Ödemeler">
                                    <i class="bi bi-cash-coin"></i>
                                </a>
                                <button class="btn btn-sm btn-outline-danger" title="Sil">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>