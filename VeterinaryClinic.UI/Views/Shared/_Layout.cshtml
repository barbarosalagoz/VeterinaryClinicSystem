<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Veteriner Kliniği</title>

    <!-- Google Fonts (Poppins) -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            overflow-x: hidden;
        }

        /* Sidebar Tasarımı */
        #sidebar-wrapper {
            min-height: 100vh;
            margin-left: -15rem;
            transition: margin .25s ease-out;
            background-color: #2c3e50; /* Koyu Lacivert */
            color: #fff;
            width: 15rem;
            position: fixed;
            z-index: 1000;
        }

            #sidebar-wrapper .sidebar-heading {
                padding: 1.5rem 1.25rem; /* Navbar yüksekliği ile uyumlu */
                font-size: 1.2rem;
                font-weight: bold;
                background-color: #1a252f;
                border-bottom: 1px solid #34495e;
            }

            #sidebar-wrapper .list-group {
                width: 15rem;
            }

            #sidebar-wrapper .list-group-item {
                background-color: transparent;
                color: #ecf0f1;
                border: none;
                padding: 1rem 1.25rem;
            }

                #sidebar-wrapper .list-group-item:hover {
                    background-color: #34495e;
                    color: #fff;
                    padding-left: 1.5rem; /* Hover efekti */
                    transition: all 0.3s;
                }

                #sidebar-wrapper .list-group-item.active {
                    background-color: #3498db; /* Açık Mavi */
                    font-weight: 600;
                }

        /* Ana İçerik Alanı */
        #page-content-wrapper {
            min-width: 100vw;
            padding-left: 0;
            transition: padding-left .25s ease-out;
            margin-left: 0;
        }

        /* Media Query Düzeltmesi */
        @@media (min-width: 768px) {
            #sidebar-wrapper {
                margin-left: 0;
            }

            #page-content-wrapper {
                min-width: 0;
                width: 100%;
                margin-left: 15rem; /* Sidebar genişliği kadar it */
            }
        }

        /* Navbar Tasarımı */
        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.08);
            background-color: #fff !important;
        }

        .card-box {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
            border: none;
            margin-bottom: 20px;
            transition: transform 0.3s;
        }

            .card-box:hover {
                transform: translateY(-5px);
            }
    </style>
</head>
<body>

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="border-end" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom">
                <i class="bi bi-heart-pulse-fill text-danger me-2"></i> VetClinic
            </div>
            <div class="list-group list-group-flush mt-3">

                <!-- Dashboard Linki -->
                <a class="list-group-item list-group-item-action p-3 @(ViewData["Title"]?.ToString() == "Dashboard" ? "active" : "")"
                   href="@Url.Action("Index", "Home")">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>

                <!-- Hayvanlar Linki -->
                <a class="list-group-item list-group-item-action p-3 @(ViewData["Title"]?.ToString() == "Animals" ? "active" : "")"
                   href="@Url.Action("Index", "Animals")">
                    <i class="bi bi-tencent-qq me-2"></i> Hayvanlar
                </a>

                <!-- Randevular Linki -->
                <a class="list-group-item list-group-item-action p-3 @(ViewData["Title"]?.ToString() == "Randevular" ? "active" : "")"
                   href="@Url.Action("Index", "Appointments")">
                    <i class="bi bi-calendar-check me-2"></i> Randevular
                </a>

                <!-- Ödemeler Linki -->
                <a class="list-group-item list-group-item-action p-3 @(ViewData["Title"]?.ToString() == "Ödeme Yönetimi" ? "active" : "")"
                   href="@Url.Action("Index", "Payments")">
                    <i class="bi bi-cash-coin me-2"></i> Ödemeler
                </a>

                <!-- Müşteriler Linki -->
                <a class="list-group-item list-group-item-action p-3 @(ViewData["Title"]?.ToString() == "Müşteriler" ? "active" : "")"
                   href="@Url.Action("Index", "Customers")">
                    <i class="bi bi-people me-2"></i> Müşteriler
                </a>

            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">

            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom px-4">
                <div class="container-fluid">
                    <button class="btn btn-outline-primary btn-sm" id="sidebarToggle">
                        <i class="bi bi-list"></i> Menü
                    </button>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0 align-items-center">

                            <!-- Kullanıcı Bilgisi -->
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                        <div class="bg-primary text-white rounded-circle d-flex justify-content-center align-items-center me-2" style="width: 35px; height: 35px;">
                                            @User.Identity.Name?.Substring(0, 1).ToUpper()
                                        </div>
                                        <span class="fw-medium">@User.Identity.Name</span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end shadow border-0" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="#!"><i class="bi bi-person me-2"></i> Profil</a>
                                        <div class="dropdown-divider"></div>

                                        <!-- Logout Form -->
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right me-2"></i> Çıkış Yap
                                            </button>
                                        </form>
                                    </div>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link fw-bold text-primary" href="@Url.Action("Login", "Account")">Giriş Yap</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Main Content Area -->
            <div class="container-fluid py-4 px-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sidebar Toggle Script -->
    <script>
        window.addEventListener('DOMContentLoaded', event => {
            const sidebarToggle = document.body.querySelector('#sidebarToggle');
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', event => {
                    event.preventDefault();
                    document.body.classList.toggle('sb-sidenav-toggled');

                    // Mobile uyumu için basit logic
                    const sidebar = document.getElementById('sidebar-wrapper');
                    const content = document.getElementById('page-content-wrapper');

                    if (sidebar.style.marginLeft === '0px') {
                         sidebar.style.marginLeft = '-15rem';
                         content.style.marginLeft = '0';
                    } else {
                         // Desktop'ta toggle yapınca kapanması için (CSS class daha iyi olur ama inline hızlı çözüm)
                         if(window.innerWidth >= 768) {
                             if(sidebar.style.marginLeft === '-15rem') {
                                 sidebar.style.marginLeft = '0';
                                 content.style.marginLeft = '15rem';
                             } else {
                                 sidebar.style.marginLeft = '-15rem';
                                 content.style.marginLeft = '0';
                             }
                         } else {
                             // Mobile
                             sidebar.style.marginLeft = '0';
                         }
                    }
                });
            }
        });
    </script>

    <!-- Script Section Eklendi (Hata vermemesi için) -->
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>