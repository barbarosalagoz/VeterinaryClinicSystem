@model IEnumerable<VeterinaryClinic.UI.Models.CustomerViewModel>

@{
    ViewData["Title"] = "Müşteriler";
}

<!-- Başlık ve Yeni Ekle Butonu -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark mb-0">Müşteriler</h2>
        <p class="text-muted">Klinikte kaydı bulunan tüm hayvan sahipleri.</p>
    </div>
    <button class="btn btn-primary shadow-sm">
        <i class="bi bi-person-plus me-1"></i> Yeni Müşteri
    </button>
</div>

<!-- Müşteri Tablosu -->
<div class="card-box p-4">
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width: 30%">Müşteri Adı</th>
                    <th>İletişim</th>
                    <th>Hayvan Sayısı</th>
                    <th>Sahip Olduğu Hayvanlar</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <!-- Müşteri Profili -->
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex justify-content-center align-items-center me-3" style="width: 45px; height: 45px;">
                                        <span class="fw-bold fs-5">@item.OwnerName.Substring(0, 1).ToUpper()</span>
                                    </div>
                                    <div>
                                        <span class="fw-bold text-dark d-block">@item.OwnerName</span>
                                        <small class="text-muted">ID: @(Math.Abs(item.OwnerName.GetHashCode()).ToString().Substring(0, 5))</small>
                                    </div>
                                </div>
                            </td>

                            <!-- İletişim (Dummy) -->
                            <td>
                                <div class="d-flex flex-column">
                                    <span class="text-dark small"><i class="bi bi-telephone me-2 text-muted"></i>@item.PhoneNumber</span>
                                    <span class="text-muted small"><i class="bi bi-envelope me-2 text-muted"></i>musteri@email.com</span>
                                </div>
                            </td>

                            <!-- Hayvan Sayısı -->
                            <td>
                                <span class="badge bg-info text-dark bg-opacity-25 border border-info px-3 py-2">
                                    <i class="bi bi-heart-fill text-danger me-1"></i> @item.PetCount Dost
                                </span>
                            </td>

                            <!-- Hayvan Listesi -->
                            <td>
                                @foreach (var petName in item.PetNames)
                                {
                                    <span class="badge bg-light text-secondary border me-1 mb-1">
                                        <i class="bi bi-tencent-qq me-1"></i> @petName
                                    </span>
                                }
                            </td>

                            <!-- Butonlar -->
                            <td class="text-end">
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-outline-primary" title="Düzenle">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-secondary" title="Detaylar">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" title="Sil">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            <i class="bi bi-people display-1 mb-3 text-secondary opacity-25"></i>
                            <p class="fs-5">Henüz kayıtlı müşteri bulunmamaktadır.</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>